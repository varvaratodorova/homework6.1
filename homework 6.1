using System;

class Program
{
    static void Main()
    {
        Console.Write("Введіть кількість працівників: ");
        int count = int.Parse(Console.ReadLine());
        double[] salaries = new double[count];
        double total = 0;

        for (int i = 0; i < count; i++)
        {
            Console.Write($"Введіть зарплату працівника {i + 1}: ");
            salaries[i] = double.Parse(Console.ReadLine());
            total += salaries[i];
        }

        double average = total / count;
        Console.WriteLine($"Середній заробіток: {average:F2}");
    }
}




